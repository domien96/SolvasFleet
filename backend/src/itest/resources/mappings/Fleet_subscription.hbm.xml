<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.FleetSubscription" table="fleet_subscriptions">
      <meta attribute="class-description">
         This class contains the subscribed fleet detail.
      </meta>
      <id name="id" type="int" column="fleet_subscription_id">
         <generator class="identity"/>
      </id>

       <property name="endDate" column="end_date" type="date" not-null="true"/>
      <property name="startDate" column="start_date" type="date" not-null="true"/>

       <many-to-one name="vehicle" column="vehicle_id"
                    class="solvas.models.Vehicle" not-null="true"/>
      <many-to-one name="fleet" column="fleet_id"
                   class="solvas.models.Fleet" not-null="true"/>

      <property name="updatedAt" column="updated_at" type="timestamp" generated="always"/>
      <property name="createdAt" column="created_at" type="timestamp" generated="insert"/>

   </class>
</hibernate-mapping>
