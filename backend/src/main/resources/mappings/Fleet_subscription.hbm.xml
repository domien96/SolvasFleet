<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.service.models.FleetSubscription" table="fleet_subscriptions">
      <meta attribute="class-description">
         This class contains the subscribed subFleet detail.
      </meta>
      <id name="id" type="int" column="fleet_subscription_id">
         <generator class="identity"/>
      </id>

       <property name="endDate" column="end_date" type="java.time.LocalDate"/>
      <property name="startDate" column="start_date" type="java.time.LocalDate" not-null="true"/>
      <property name="archived" column="archived" type="boolean" not-null="true"/>

       <many-to-one name="vehicle" column="vehicle_id"
                    class="solvas.service.models.Vehicle" not-null="true"/>
      <many-to-one name="subFleet" column="subfleet_id"
                   class="solvas.service.models.SubFleet" not-null="true"/>

      <set name="insuranceCoverages" table="insurance_coverages" lazy="true">
         <key column="insurance_id" />
         <one-to-many class="solvas.service.models.InsuranceCoverage"/>
      </set>

      <property name="updatedAt" column="updated_at" type="java.time.LocalDateTime" generated="always" not-null="true"/>
      <property name="createdAt" column="created_at" type="java.time.LocalDateTime" generated="insert" not-null="true"/>

   </class>
</hibernate-mapping>
