<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="solvas.models.Company" table="companies" dynamic-update="true"><!-- do not update null values-->
        <meta attribute="class-description">
            This class contains the company detail.
        </meta>
        <id name="id" type="int" column="company_id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="vatNumber" column="vat" type="string"/>
        <property name="phoneNumber" column="phone" type="string"/>

        <property name="address" column="address" type="string"/>

        <set name="representatives" table="company_users">
            <key column="company_id"/>
            <many-to-many column="user_id" class="solvas.models.User" />
        </set>
        <property name="updatedAt" column="updated_at" type="java.time.LocalDateTime" generated="always"/>
        <property name="createdAt" column="created_at" type="java.time.LocalDateTime" generated="insert"/>

    </class>
</hibernate-mapping>
