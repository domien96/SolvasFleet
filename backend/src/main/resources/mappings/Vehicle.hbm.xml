<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.Vehicle" table="vehicles">
      <meta attribute="class-description">
         This class contains the Company detail.
      </meta>
      <id name="id" type="int" column="id">
         <generator class="identity"/>
      </id>
      <!--<property name="name" column="name" type="string"/>-->

      <property name="license_plate" column="license_plate" type="string"/>
       <property name="chassis_number" column="chassis_number" type="string"/>
       <property name="model" column="model" type="string"/>
       <property name="type" column="type" type="string"/>
       <property name="kilometer_count" column="kilometer_count" type="int"/>
       <property name="year" column="year" type="int"/>

       <many-to-one name="leasing_company" column="leasing_company_id"
                    class="solvas.models.Company" not-null="false"/>

       <property name="value" column="vat" type="int"/>

       <many-to-one name="company" column="company_id"
                    class="solvas.models.Company" not-null="false"/>

      <property name="updated_at" column="updated_at" type="timestamp"/>
      <!--http://stackoverflow.com/questions/
      2635046/set-creation-and-update-time-with-hibernate-in-xml-mappings-->
      <property name="created_at" column="created_at" type="timestamp"/>
      <property name="url" column="url" type="string"/>
   </class>
</hibernate-mapping>
