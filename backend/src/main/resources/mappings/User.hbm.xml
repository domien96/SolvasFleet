<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.User" table="users">
      <meta attribute="class-description">
         This class contains the User detail.
      </meta>
      <id name="id" type="int" column="user_id">
         <generator class="identity"/>
      </id>

      <property name="firstName" column="first_name" type="string"/>
      <property name="lastName" column="last_name" type="string"/>
      <property name="email" column="email" type="string"/>

      <property name="password" column="password" type="string"/>

      <property name="updatedAt" column="updated_at" type="timestamp"/>
      <!--http://stackoverflow.com/questions/
      2635046/set-creation-and-update-time-with-hibernate-in-xml-mappings-->
      <property name="createdAt" column="created_at" type="timestamp"/>

      <set name="companies" table="company_users" inverse="true"> <!-- Company is owner of relationship -->
         <key column="user_id"/>
         <many-to-many column="company_id" class="solvas.models.Company" />
      </set>

      <set name="roles" table="userroles"> <!-- User is owner of relationship -->
          <key column="user_id"/>
          <many-to-many column="role_id" class="solvas.models.Role" />
      </set>
   </class>
</hibernate-mapping>
