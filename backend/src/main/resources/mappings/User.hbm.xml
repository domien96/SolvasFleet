<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.User" table="users">
      <meta attribute="class-description">
         This class contains the User detail.
      </meta>
      <id name="id" type="int" column="user_id">
         <generator class="identity"/>
      </id>

      <property name="firstName" column="first_name" type="string" not-null="true"/>
      <property name="lastName" column="last_name" type="string" not-null="true"/>
      <property name="email" column="email" type="string" not-null="true"/>

      <property name="password" column="password" type="string" not-null="true"/>
      <property name="archived" column="archived" type="boolean" not-null="true"/>

      <property name="updatedAt" column="updated_at" type="java.time.LocalDateTime" generated="always" insert="false" not-null="true" />
      <property name="createdAt" column="created_at" type="java.time.LocalDateTime" generated="insert" insert="false" not-null="true" />


      <set name="companies" table="company_users" inverse="true"> <!-- Company is owner of relationship -->
         <key column="user_id"/>
         <many-to-many column="company_id" class="solvas.models.Company" />
      </set>
   </class>
</hibernate-mapping>
