<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.User" table="users">
      <meta attribute="class-description">
         This class contains the Company detail.
      </meta>
      <id name="id" type="int" column="user_id">
         <generator class="native"/>
      </id>
      <!--<property name="name" column="name" type="string"/>
      <property name="vat_number" column="vat" type="string"/>-->



      <property name="firstName" column="firstName" type="string"/>
      <property name="lastName" column="lastName" type="string"/>
      <property name="email" column="email" type="string"/>

      <property name="password" column="password" type="string"/>

      <property name="updatedAt" column="updated_at" type="timestamp"/>
      <!--http://stackoverflow.com/questions/
      2635046/set-creation-and-update-time-with-hibernate-in-xml-mappings-->
      <property name="createdAt" column="created_at" type="timestamp"/>
      <property name="url" column="url" type="string"/>

   </class>
</hibernate-mapping>
