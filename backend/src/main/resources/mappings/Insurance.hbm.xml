<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="solvas.service.models.Insurance" table="insurances">
        <meta attribute="class-description">
            This class contains the User detail.
        </meta>
        <id name="id" type="int" column="insurance_id">
            <generator class="identity"/>
        </id>

        <property name="riskPremium" column="risk_premium" type="long" not-null="true"/>
        <property name="applicableExemption" column="applicable_exemption" type="long" not-null="true"/>


        <property name="archived" column="archived" type="boolean" not-null="true"/>

        <property name="updatedAt" column="updated_at" type="java.time.LocalDateTime" generated="always" insert="false" not-null="true" />
        <property name="createdAt" column="created_at" type="java.time.LocalDateTime" generated="insert" insert="false" not-null="true" />


        <many-to-one name="insuranceType" column="insurance_type_id"
                     class="solvas.service.models.InsuranceType" not-null="true"/>

        <many-to-one name="company" column="company_id"
                     class="solvas.service.models.Company" not-null="true"/>

    </class>
</hibernate-mapping>