<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.Permission" table="permissions">
      <meta attribute="class-description">
         This class contains the permission detail.
      </meta>
      <id name="id" type="int" column="permission_id">
         <generator class="identity"/>
      </id>

      <property name="name" column="name" type="string" not-null="true"/>

       <set name="roles" table="rolepermissions" inverse="true"> <!-- Role is owner of relationship -->
           <key column="permission_id"/>
           <many-to-many column="role_id" class="solvas.models.Role" />
       </set>

      <property name="updatedAt" column="updated_at" type="timestamp"/>
      <property name="createdAt" column="created_at" type="timestamp"/>
   </class>
</hibernate-mapping>
