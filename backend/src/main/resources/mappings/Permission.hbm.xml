<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.Permission" table="permissions">
      <meta attribute="class-description">
         This class contains the permissions detail.
      </meta>
      <id name="id" type="int" column="permission_id">
         <generator class="native"/>
      </id>

       <property name="name" column="name" type="string"/>

      <property name="updatedAt" column="updated_at" type="timestamp"/>
      <property name="createdAt" column="created_at" type="timestamp"/>
   </class>
</hibernate-mapping>
