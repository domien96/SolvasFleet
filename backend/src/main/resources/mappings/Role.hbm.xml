<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="solvas.models.Role" table="roles">
      <meta attribute="class-description">
         This class contains the role detail.
      </meta>
      <id name="id" type="int" column="role_id">
         <generator class="identity"/>
      </id>

       <property name="function" column="function" type="string" not-null="true"/>

       <many-to-one name="user" column="user_id"
                    class="solvas.models.User" not-null="true"/>
       <many-to-one name="company" column="company_id"
                    class="solvas.models.User" not-null="true"/>
       <property name="archived" column="archived" type="boolean" not-null="true"/>


       <set name="permissions" table="rolepermissions"> <!-- Role is owner of relationship -->
           <key column="role_id"/>
           <many-to-many column="permission_id" class="solvas.models.Permission" />
       </set>

       <property name="updatedAt" column="updated_at" type="java.time.LocalDateTime" generated="always" not-null="true"/>
       <property name="createdAt" column="created_at" type="java.time.LocalDateTime" generated="insert" not-null="true"/>


   </class>
</hibernate-mapping>
